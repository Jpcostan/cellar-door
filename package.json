{
  "name": "cellar-door",
  "version": "0.0.6",
  "description": "Local-first automation gateway with token-efficient memory",
  "license": "MIT",
  "private": false,
  "type": "module",
  "bin": {
    "cellar-door": "dist/cli.js"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE",
    "package.json"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "build": "tsup",
    "typecheck": "tsc --noEmit",
    "lint": "eslint .",
    "test": "vitest run",
    "smoke": "node dist/cli.js version",
    "prepublishOnly": "npm run test && npm run build",
    "bench:retrieval": "npm run build && node scripts/bench_retrieval.mjs",
    "bench:tokens": "npm run build && node scripts/bench_tokens.mjs",
    "security:check": "node scripts/validate_security.mjs"
  },
  "engines": {
    "node": ">=22"
  },
  "dependencies": {
    "ajv": "^8.17.1",
    "commander": "^12.1.0",
    "playwright": "^1.52.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@types/node": "^20.17.10",
    "@typescript-eslint/eslint-plugin": "^8.24.1",
    "@typescript-eslint/parser": "^8.24.1",
    "eslint": "^9.20.1",
    "tsup": "^8.3.5",
    "typescript": "^5.7.3",
    "vitest": "^4.0.18"
  }
}
